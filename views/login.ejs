<title>Вхід</title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="/assets/login.css">
<link rel="icon" type="image/x-icon" href="/assets/images/logo.png"/>

<body>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto" style="margin-top: 100px">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Вхід</h5>
                    <form class="form-signin" method="post" action="/login">
                        <div class="form-label-group">
                            <input type="text" id="inputEmail" name="username" class="form-control" placeholder="Логін" required autofocus>
                            <label for="inputEmail">Логін</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Пароль" required>
                            <label for="inputPassword">Пароль</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Увійти</button>
                        <button onclick="window.location.href='/'" class="btn btn-lg btn-primary btn-block text-uppercase">Назад</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

<script src="/assets/js/jquery-1.12.4.min.js"></script>
