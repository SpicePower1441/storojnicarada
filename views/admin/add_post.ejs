<% include admin_header.ejs %>
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Адмін-панель</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Адмін-панель</a></li>
            <li class="breadcrumb-item active">Додати новину</li>
        </ol>

        <form action="/admin/dashboard/post/add-post" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Заголовок</label>
                <input required value="<%= posts.title %>" type="text" name="title" id="title" class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Опис</label>
                <textarea name="description" id="description" class="form-control"><%= posts.description %></textarea>
            </div>
            <div class="form-group">
                <label for="">Категорія</label>
                <select name="categories" class="form-control">
                    <% categories.forEach(function (cat) { %>
                        <option value="<%= cat.title %>"><%= cat.title %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="markdown">Зміст</label>
                <textarea required name="markdown" id="ta" class="form-control"><%= posts.markdown %></textarea>
            </div>

            <div class="form-group">
                <label for="">Зображення</label>
                <div class="custom-file">
                    <input type="file" required class="custom-file-input" name="image" id="img" lang="ua" value="">
                    <label class="custom-file-label" for="img">Оберіть файл</label>
                </div>
                <img src="#" id="imgPreview" alt="">
            </div>

            <a href="/admin/dashboard" class="btn btn-secondary">Назад</a>
            <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
        <br>

    </div>
</main>


<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function () {
        readURL(this);
    });


</script>

<% include admin_footer.ejs %>
